<h1>Contact Page</h1>
<% if (contacts.length<1) { %>
<div class="alert alert-warning" role="alert">No Contact Saved</div>
<% } else {%> <% if (msg.length !== 0) { %>
<div class="alert alert-success" role="alert"><%= msg %></div>
<% } %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Phone number</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% contacts.forEach((contact, index) => { %>
    <tr>
      <th scope="row"><%= index + 1 %></th>
      <td><%= contact.nama %></td>
      <td><%= contact.noHp %></td>
      <td>
        <a
          href="/contact/<%= contact.nama %>"
          class="btn btn-success badge rounded-pill text-bg-primary"
          ><i class="bi bi-info-circle"></i> Detail</a
        >
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
<%} %>
<a href="/contact/add" class="btn btn-primary">Add New Contact</a>
