<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Contact List</h2>

      <a href="/contact/add" class="btn btn-primary mb-2">Add New Contact</a>
      <% if (msg.length!== 0) { %>
      <div class="alert alert-success fw-bold" role="alert"><%= msg %></div>
      <% } %> <% if (contacts.length < 1) { %>
      <div class="alert alert-danger fw-bold" role="alert">
        Contact data not found
      </div>
      <% } else {%>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% contacts.forEach((contact, index) => { %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.noHp %></td>
            <td>
              <a
                href="/contact/<%= contact.nama %>"
                class="btn btn-success badge rounded-pill text-bg-primary"
                ><i class="bi bi-info-circle"></i> Detail</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% } %>
